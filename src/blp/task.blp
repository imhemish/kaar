using Gtk 4.0;
using Adw 1;

template $TaskStack: Gtk.Stack {
    Gtk.StackPage {
        name: "entry";
        child: Adw.EntryRow entry_row {
            show-apply-button: true;
        };
    }

    Gtk.StackPage {
        name: "preview";
        child: Adw.ActionRow preview_row {
            [prefix]
            Gtk.Label priority {}

            [suffix]
            Gtk.Label due {}
        };
    }
}
